        <link href="https://fonts.googleapis.com/css?family=Merienda&display=swap" rel="stylesheet"> 
        
    </head>
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <body>

    <nav class = "navbar navbar-light" style="background-color: #2E86C1   ; border-radius: 0;">
        <div class = "container-fluid">
            <div class = "navbar-header">
                <a class = "navbar-brand" href="/" style="font-family: 'Megrim', cursive; font-weight: 1000; font-size: 2em;">LtsCamp</a>
            </div>
            <div class = "collapse navbar-collapse">
                <ul class = "nav navbar-nav navbar-right">
                    <%if(!currentUser){%>
                        <li> <a class = "navHead" href="/login">Login</a> </li>
                        <li> <a class = "navHead" href="/signup">Sign Up</a> </li>   
                    <%}else{%>
                        <li> <a class = "navHead" href="#">Logged In as: <%= currentUser.username%></a> </li>
                        <li> <a class = "navHead" href="/logout">Logout</a> </li>   
                    <%}%>
                </ul>
            </div>
        </div>
    </nav>
    <div class = "container">
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>         
        <% } %>
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %> 
    </div>