<%- include("partials/header.ejs")%> 

<div class = "container">
    <div class = "row">
        <h2 style = "text-align: center">LOGIN</h2><br>
        <form action="/login" method="POST">
            <div style = "margin: 0px 20%">
                <div class = "form-group">
                    <input class = "form-control" type="text" name="username"  placeholder="username" required>
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="password" name="password"  placeholder="password" required min="0.00" step="10" >
                </div>
             </div>
            <div class = "form-group" style = "margin: 0 40%; width:20%">
                <button class  = "btn btn-lg btn-primary btn-block" type="submit">Login</button>
            </div>
        </form>
        <p ><a href="/Campgrounds">Go Back</a></p>
    </div>
</div>
